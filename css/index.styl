$full = 100%
$bkg = #000000
$txt = #9e9e9e

html, body, #map 
    background-color $bkg
    height $full
    margin 0
    padding 0
    color $txt

body
    position relative

.search 
    background-color $bkg
    color $txt
    position absolute
    bottom 0px
    left 0px
    padding 10px 5px
    border-radius 4px
    border 2px solid $txt
    width 25%

input
    width 90%
    padding 10px

.hideShowToggle
    position absolute
    top 5px
    right 10px

.list
    position absolute
    top 0px
    left 0px
    background-color $bkg
    color $txt
    border 2px solid $txt
    padding 15px 10px
    width 15%
    border-radius: 0.5px

ul
    list-style-type none
    display inline

h1
    margin 0